<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <LinearLayout
            android:layout_centerInParent="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BuBu daiary"
                android:textSize="25sp"
                android:textColor="#00b8d4"
                android:id="@+id/year"
                />

        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#00b8d4"
        />

<!--<com.wefika.horizontalpicker.HorizontalPicker-->
    <!--android:paddingTop="16dp"-->
    <!--android:id="@+id/add_yearpicker"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:textColor="#0097a7"-->
    <!--android:textSize="20sp"-->
    <!--/>-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/add_yaerpicker1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            >
        </NumberPicker>
        <NumberPicker
            android:id="@+id/add_monthpicker"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            >
        </NumberPicker>

        <NumberPicker
            android:id="@+id/add_datepicker"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            ></NumberPicker>
        <LinearLayout

            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <TextView
            android:id="@+id/add_timepicker_am"
            android:clickable="true"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오전"
            />
        <TextView
            android:id="@+id/add_timepicker_fm"
            android:clickable="true"
            android:paddingTop="8dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오후"

            />
        </LinearLayout>

        <NumberPicker
            android:id="@+id/add_hourpicker"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            >
        </NumberPicker>

        <NumberPicker
            android:id="@+id/add_minitepicker"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            >
        </NumberPicker>

    </LinearLayout>





</LinearLayout>